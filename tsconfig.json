{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"target": "ES2022",
		"moduleResolution": "Node",
		"module": "es2022",
		"lib": ["ES2022", "DOM", "WebWorker"],
		"sourceMap": true,
		"declaration": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@dist/*": ["./dist/*"]
		}
	},
	"include": ["src/**/*", "plugins/**/*", "playground.ts", "tsup.config.ts"],
	"exclude": ["node_modules"]
}
